<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  
  <PropertyGroup>
    <PackageId>Rstolsmark.Owin.PasswordAuthentication</PackageId>
    <Version>1.0.0</Version>
    <Authors>ragnarstolsmark</Authors>
    <Company>Rstolsmark</Company>
    <Description>An OWIN middleare for basic password authentication against a salted hashed password. To salt and hash the password use Rstolsmark.PasswordHashTool.</Description>
    <PackageTags>password;hash;passphrase;salt;owin;basic authentication</PackageTags>
    <RepositoryUrl>https://github.com/ragnarstolsmark/Rstolsmark.Owin.PasswordAuthentication</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Rstolsmark.PasswordHashLib" Version="1.0.1" />
  </ItemGroup>

</Project>
